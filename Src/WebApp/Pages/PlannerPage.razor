@page "/planner"
@using Isitar.RoomPlanner.Logic.Models
@inject AppState AppState
<div class="is-flex is-flex-direction-column" style="height: 100%">
<h1 class="title">Planner</h1>
<div class="is-flex-grow-1">
    <Planner Plan="plan" />
</div>
</div>

@code
{
    private Plan? plan;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        plan = AppState.Plan ?? new Plan("Fake Plan")
        {
            Furnitures = new List<Furniture>
            {
                new("Schrank", 1.5d, 1, 2, "red"),
                new("Pult", 2, 1, 1.5, "salmon"),
                new("Bett", 2, 2, 1, "green"),
            },
            CalibratedAtHeight = 1000,
            CalibratedAtWidth = 1000,
            CalibratedHeightForOneUnit = 23,
            CalibratedWidthForOneUnit = 23,
        };
    }
}
